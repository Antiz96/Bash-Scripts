##Listing all local user's crontab :

#!/bin/bash

result=$(for user in $(cut -f1 -d: /etc/passwd)
do
        echo -e "\n\n==> $user:" && crontab -u $user -l
done)

echo "$result"


##Redirect the result in a file if needed

#!/bin/bash

result=$(for user in $(cut -f1 -d: /etc/passwd)
do
        echo -e "\n\n==> $user:" && crontab -u $user -l
done)

echo "$result" > /path/to/file
